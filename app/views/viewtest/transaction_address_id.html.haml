.l-single_wrapper
  %section.l-single_container
    %h2.c-profile-head 住所入力
    = form_for '/', html: { class: 'l-single_inner'} do |f|
      .l-single_content
        .c-form_group
          = f.label :name, 'お名前'
          %span.c-form_require 必須
          = f.text_field :param_name, placeholder: '例）山田', class: 'c-input-default'
          = f.text_field :param_name, placeholder: '例）彩', class: 'c-input-default'
        .c-form_group
          = f.label :name, 'お名前カナ'
          %span.c-form_require 必須
          = f.text_field :param_name, placeholder: '例）ヤマダ', class: 'c-input-default'
          = f.text_field :param_name, placeholder: '例）アヤ', class: 'c-input-default'
        .c-form_group
          = f.label :zip_code1, '郵便番号'
          %span.c-form_require 必須
          = f.text_field :zip_code1, placeholder: '例）123-4567', class: 'c-input-default'
        .c-form_group
          = f.label :prefecture, '都道府県'
          %span.c-form_require 必須
          .c-select-wrap
            = f.select :param_name, options_for_select([['北海道', '1'], ['青森県', '2'], ['岩手県', '3'], ['宮城県', '4'], ['秋田県', '5'], ['山形県', '6'], ['福島県', '7'], ['茨城県', '8'], ['栃木県', '9'], ['群馬県', '10'], ['埼玉県', '11'], ['千葉県', '12'], ['東京都', '13'], ['神奈川県', '14'], ['新潟県', '15'], ['富山県', '16'], ['石川県', '17'], ['福井県', '18'], ['山梨県', '19'], ['長野県', '20'], ['岐阜県', '21'], ['静岡県', '22'], ['愛知県', '23'], ['三重県', '24'], ['滋賀県', '25'], ['京都府', '26'], ['大阪府', '27'], ['兵庫県', '28', selected: 'selected'], ['奈良県', '29'], ['和歌山県', '30'], ['鳥取県', '31'], ['島根県', '32'], ['岡山県', '33'], ['広島県', '34'], ['山口県', '35'], ['徳島県', '36'], ['香川県', '37'], ['愛媛県', '38'], ['高知県', '39'], ['福岡県', '40'], ['佐賀県', '41'], ['長崎県', '42'], ['熊本県', '43'], ['大分県', '44'],['宮崎県', '45'],['鹿児島県', '46'], ['沖縄県', '47'], ['未定', '99']], params[:param_name]), {}, { class: 'c-select-default' }
            %i.c-icon-arrow-bottom
        .c-form_group
          = f.label :param_name, '市区町村'
          %span.c-form_require 必須
          = f.text_field :param_name, value: '神戸市中央区若菜通', placeholder: '例）横浜市緑区', class: 'c-input-default'
        .c-form_group
          = f.label :address1_label, '番地'
          %span.c-form_require 必須
          = f.text_field :param_name, value: '４ー２', placeholder: '例）青山1−1−1', class: 'c-input-default'
        .c-form_group
          = f.label :address2_label, '建物名'
          %span.c-form_arbitrary 任意
          = f.text_field :param_name, value: 'セントラルハイツ三宮東', placeholder: '例）柳ビル103', class: 'c-input-default'
        .c-form_group
          = f.label :address2_label, '電話'
          %span.c-form_arbitrary 任意
          = f.number_field :telephone, placeholder: '例）09012345678', class: 'c-input-default'
        = f.submit '変更する', class: 'c-btn-default is-red'
