.l-single_wrapper
  %main.l-single_main
    %section.l-single_container
      %h2.l-single_head 会員情報入力
      = form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'l-single_inner'} do |f|
        = devise_error_messages!
        .l-single_content
          .c-form_group
            = f.label :nickname, 'ニックネーム'
            %span.c-form_require 必須
            = f.text_field :nickname, autofocus: true, placeholder: '例）メルカリ太郎', class: 'c-input-default'
          .c-form_group
            = f.label :email, '新メールアドレス(登録されたメールアドレスに認証メールが送信されます)'
            %span.c-form_require 必須
            = f.email_field :email, autofocus: true, placeholder: 'PC・携帯どちらでも可', class: 'c-input-default'
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              登録された”#{resource.unconfirmed_email}”は未認証です
              = link_to "認証メールを再送する", new_user_confirmation_path
          .c-form_group
            = f.label :password, '新パスワード（変更しない場合は空欄）'
            = f.password_field :password, placeholder: '6文字以上', class: 'c-input-default'
          .c-form_group
            = f.label :password_confirmation, '新パスワード（確認）'
            = f.password_field :password_confirmation, placeholder: '6文字以上', class: 'c-input-default'
          .c-form_group
            = f.submit '次へ進む', class: 'c-btn-default is-red'
      = render "devise/shared/links"
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
