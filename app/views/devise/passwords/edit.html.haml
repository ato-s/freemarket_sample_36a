.l-single_wrapper
  %main.l-single_main
    %section.l-single_container
      %h2.l-single_head パスワードを変更したい方
      = form_for resource, as: resource_name, url: password_path(resource_name), html: {class: 'l-single_inner'} do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .l-single_content
          .c-form_group
            = f.label :password, '新しいパスワード'
            = f.password_field :password, autofocus: true, placeholder: 'ご登録されたメールアドレス', class: 'c-input-default'
          .c-form_group
          = f.submit '送信する', class: 'c-btn-default is-red'
      = render "devise/shared/links"
