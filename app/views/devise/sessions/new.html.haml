.l-single_wrapper
  %main.l-single_main
    .p-login_panel
      .p-login_no-account
        %p アカウントをお持ちでない方はこちら
        = link_to '新規会員登録', select_api_path
      .p-login_form-inner
        = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, id: 'facebook-login', class: 'c-btn-default is-sns is-sns-facebook'
        = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, id: 'google-login', class: 'c-btn-default is-sns is-sns-google'
        = link_to 'Twitterでログイン', user_twitter_omniauth_authorize_path, id: 'twitter-login', class: 'c-btn-default is-sns is-sns-twitter'
        = link_to 'Instagramでログイン', user_instagram_omniauth_authorize_path, id: 'instagram-login', class: 'c-btn-default is-sns is-sns-instagram'

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = devise_error_messages!
        .p-login_form-inner.is-borderNone
          .c-form_group
            = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'p-login_input-text c-input-default'
          .c-form_group
            = f.password_field :password, placeholder: 'パスワード', class: 'p-login_input-text c-input-default'
          - if devise_mapping.rememberable?
            .c-form_group
              = f.check_box :remember_me
              = f.label :remember_me
          .c-form_group
            = f.submit 'ログイン', class: 'p-login_submit c-btn-default is-red'
          = render "devise/shared/links"
