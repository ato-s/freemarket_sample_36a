%br
.l-default-container
  %main.u-bgWt
    %section.p-top_pickup
      %section.c-items-box_container.l-clearfix
        .c-items-box_content.l-clearfix
          - @items.each do |item|
            %section.c-items-box
              =link_to item_path(item), method: :get do
                %figure.c-items-box_photo
                  = image_tag item.pictures.first.content
                .c-items-box_body
                  %h3.c-items-box_name.c-font-2
                    = item.name
                  .c-items-box_num.l-clearfix
                    .c-items-box_price.c-font-5
                      = item.buy_price
                    .c-items-box_likes.c-font-2
                      %i.c-icon-like-border
                      %span
                        = item.like_count
                    %p.c-item-box_tax (税込)
%br
